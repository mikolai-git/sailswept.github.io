---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Sailswept";
const tagline = "An exploration game about sailing";
/*const cta = [
  { label: "Wishlist on Steam", href: "https://store.steampowered.com/" },
  { label: "Play the demo", href: "https://itch.io/" },
  { label: "Press kit", href: "/press" }, // optional
];
*/

const screenshots = [
  { src: "/img/island.png", alt: "Screenshot 1" },
  { src: "/img/sailing.png", alt: "Screenshot 2" },
];
---

<BaseLayout title={title}>
  <section style="padding: 26px 0 10px;">
    <h1 style="font-size: clamp(44px, 6vw, 74px); margin: 10px 0 6px; letter-spacing:-0.8px;">
      {title}
    </h1>
    <p class="muted" style="font-size: 18px; margin: 0 0 18px;">
      {tagline}
    </p>

  </section>
  <section id="media" style="margin-top: 18px;">

    <div style="
      display:grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 12px;
    ">
      {screenshots.map((s) => (
        <a class="card" href={s.src} style="padding: 10px; display:block;">
          <img src={s.src} alt={s.alt} loading="lazy" style="
            width:100%;
            height: 170px;
            object-fit: cover;
            border-radius: 14px;
            border: 1px solid rgba(255,255,255,0.10);
            display:block;
          " />
        </a>
      ))}
    </div>

    <div class="muted" style="margin-top: 10px;">
      Want updates? Check the <a href="/blog">devlog</a>.
    </div>
  </section>
</BaseLayout>
