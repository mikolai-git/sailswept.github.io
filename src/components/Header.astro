---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro"; 
---

<header class="site-header">
  <nav class="nav">
    <a class="brand" href="/">{SITE_TITLE}</a>

    <div class="links">
      <HeaderLink href="/" class="pill">Home</HeaderLink>
      <HeaderLink href="/blog" class="pill">Blog</HeaderLink>
    </div>
  </nav>
</header>

<style>
  .site-header{
    position: sticky;
    top: 0;
    z-index: 50;
    background: #030452;
    backdrop-filter: blur(10px);
    border-bottom: 2px solid var(--border);
  }

  .nav{
    max-width: var(--max);
    margin: 0 auto;
    padding: 14px 18px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .brand{
    font-weight: 900;
    letter-spacing: 0.3px;
    text-decoration: none;
    color: var(--text);
    font-size: 1.1rem;
  }

  .links{
    display:flex;
    gap:10px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  /* Style the anchor rendered by HeaderLink */
  :global(a.pill){
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 9px 14px;
    border-radius: 999px;
    background: var(--panel);
    border: 2px solid var(--border);
    color: var(--text);
    text-decoration: none;
    font-weight: 800;
    line-height: 1;
  }

  :global(a.pill:hover){
    transform: translateY(-1px);
  }

  :global(a.pill.active){
    box-shadow: inset 0 0 0 2px rgba(255,255,255,0.45);
  }

  @media (max-width: 600px){
    .nav{ flex-direction: column; align-items: flex-start; }
    .links{ justify-content: flex-start; }
  }
</style>
