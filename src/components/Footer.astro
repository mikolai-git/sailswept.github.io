---
import { SITE_TITLE } from "../consts";
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="inner">
    <div class="rule"></div>

    <div class="row">
      <div class="left">Â© {year} {SITE_TITLE}</div>
      <div class="right">
        <a href="/#media">Media</a>
        <a href="/blog">Devlog</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer{
    padding: 0 18px 60px;
    margin-top: 60px;
  }

  .inner{
    max-width: var(--max);
    margin: 0 auto;
  }

  .rule{
    border-top: 2px solid var(--border);
    margin: 22px 0 16px;
  }

  .row{
    display:flex;
    align-items:center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
  }

  .left{
    font-weight: 800;
    color: var(--text);
  }

  .right{
    display:flex;
    gap: 14px;
    flex-wrap: wrap;
  }

  a{
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
  }

  a:hover{
    text-decoration: underline;
  }

  .tiny{
    margin-top: 10px;
    opacity: 0.95;
    font-size: 0.95rem;
  }

  @media (max-width: 600px){
    .row{ flex-direction: column; align-items: flex-start; }
  }
</style>
